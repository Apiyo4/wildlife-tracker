{{#partial "styles"}}
    <link rel='stylesheet' href='css/App.css'>
{{/partial}}
{{#partial "content"}}

    <form action="/dashboards" method="post" >
        <div class="form-group">
            <label for="animalName">Animal Name</label>
            <input type="text" id="animalName" name="name" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="type">Animal's Type</label>
            <select name="type" id="type" class="form-control" required>
                <option>Endangered</option>
                <option>Non-Endangered</option>
            </select>
        </div>
        <div class="form-group">
            <label for="animalHealth">Animal's Health</label>
            <select name="health" id="animalHealth" class="form-control">
                <option value="weak">Weak</option>
                <option value="okay">Okay</option>
                <option value="healthy">Healthy</option>
            </select>
        </div>
        <div class="form-group">
            <label for="animalAge">Animal's Age</label>
            <select name="age" id="animalAge" class="form-control">
                <option value="newborn">Newborn</option>
                <option value="young">Young</option>
                <option value="adult">Adult</option>
            </select>
        </div>
        <button type="submit" class="button btn-success">Submit</button>
    </form>








{{/partial}}

{{> layout.hbs}}